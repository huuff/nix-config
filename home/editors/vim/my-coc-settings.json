{
  "languageserver": {
    "nix": {
      "command": "rnix-lsp",
      "filetypes": [ "nix" ]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  },

  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck"
  },

  "diagnostic-languageserver.formatFiletypes": {
    "sh": "shfmt"
  }

}
